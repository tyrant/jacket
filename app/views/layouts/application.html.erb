<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="user_nav">
    <% if user_signed_in? %>
      Signed in as <%= current_user.email %>. Not you? <%= link_to 'Sign out', destroy_user_session_path, :action => 'delete' %>.
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "sign in", new_user_session_path %>.
    <% end %>
  </div>
  <div id="site_nav">
    <ul>
      <li><%= link_to 'Titles', titles_path %></li>
      <li><%= link_to 'Illustrations', illustrations_path %></li>
      <li><%= link_to 'Covers', covers_path %></li>
    </ul>
  </div>

<h1><%= @page_title %></h1>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
