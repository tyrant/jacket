<% if @illustrations.length > 0 %>
  <div class="digg_pagination">
    <%= will_paginate @illustrations %>
  </div>
  <ul>
    <% @illustrations.each do |illustration| %>
      <li><%= link_to raw('<img src="' + illustration.illustration.url(:thumb) + '" />'), illustration %></li>
    <% end %>
  </ul>
  <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @illustrations %>
    </div>
    <%= will_paginate @illustrations %>
  </div>
<% else %>
  No illustrations exist.
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Upload a new illustration!', new_illustration_path %>
<% end %>
